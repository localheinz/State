{
    "name": "particle/state",
    "type": "library",
    "description": "A rather simplistic but pretty finite state machine implementation",
    "keywords": ["finite", "state", "machine", "fsm"],
    "homepage": "http://github.com/particle-php/state",
    "license" : "BSD",
    "authors" : [
        {
            "name": "Berry Langerak",
            "email": "berry@berryllium.nl",
            "role": "developer"
        }
    ],
    "require": {
